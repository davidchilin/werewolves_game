<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <ImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="16dp"
            android:contentDescription="App Icon" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Werewolves Server"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FF55CC"
            android:shadowColor="#880088"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15" />

        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="(All players must be on same WIFI)"
            android:textAlignment="center"
            android:textColor="#AAFFAA"
            android:shadowColor="#008888"
            android:shadowRadius="10"
            android:textIsSelectable="true"
            android:layout_marginBottom="32dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Server Port"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="#222222"
            app:boxStrokeColor="#444444"
            app:boxStrokeWidth="1dp"
            android:textColorHint="#AAAAAA"
            app:hintTextColor="#FFAAFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="5000"
                android:textColor="#FFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Server"
            android:layout_marginTop="24dp"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:backgroundTint="#000000"
            app:strokeColor="#444444"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Server"
            android:layout_marginTop="24dp"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:backgroundTint="#220000"
            app:strokeColor="#FF0000"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Stopped.\nMake sure to close app when done!"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#00FFFF"
            android:shadowColor="#008888"
            android:shadowRadius="10"
            android:layout_marginTop="32dp"
            android:textIsSelectable="true" />

        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debug Console:"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp"/>

        <ScrollView
            android:id="@+id/svLog"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#eeeeee"
            android:padding="8dp"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvDebugLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="> System Ready..."
                android:textColor="#333333"
                android:textSize="12sp" />
        </ScrollView>
    </LinearLayout>
</ScrollView>
